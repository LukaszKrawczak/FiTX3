<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="250dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.brus5.lukaszkrawczak.fitx.MetacalcActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/weightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="3dp"
            android:text="Weight:" />

        <TextView
            android:id="@+id/heightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/weightTextView"
            android:layout_alignStart="@+id/weightTextView"
            android:layout_below="@+id/weightTextView"
            android:layout_marginTop="3dp"
            android:text="Height:" />

        <TextView
            android:id="@+id/ageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/heightTextView"
            android:layout_alignStart="@+id/heightTextView"
            android:layout_below="@+id/heightTextView"
            android:layout_marginTop="3dp"
            android:text="Age:" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvAREOresult"
            android:layout_alignEnd="@+id/switchCardio"
            android:layout_alignRight="@+id/switchCardio"
            android:text="TextView" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RadioGroup>

        <Button
            android:id="@+id/btCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sbNEAT"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Count Calories" />

        <SeekBar
            android:id="@+id/sbAreoTEA"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/sbGymTEA"
            android:layout_alignRight="@+id/sbGymTEA"
            android:layout_below="@+id/sbAreoTime"
            android:layout_marginTop="17dp"
            android:max="2"
            android:progress="0" />

        <SeekBar
            android:id="@+id/sbGymTEA"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sbGymTime"
            android:layout_marginTop="16dp"
            android:max="2"
            android:progress="0" />

        <TextView
            android:id="@+id/tvGymTEA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sbGymTEA"
            android:layout_toEndOf="@+id/textViewWeight"
            android:layout_toRightOf="@+id/textViewWeight"
            android:text="low intensity" />

        <TextView
            android:id="@+id/tvAreoTEA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvGymTEA"
            android:layout_alignStart="@+id/tvGymTEA"
            android:layout_below="@+id/sbAreoTEA"
            android:text="low intensity" />

        <SeekBar
            android:id="@+id/sbNEAT"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ageTextView"
            android:layout_alignStart="@+id/ageTextView"
            android:layout_alignTop="@+id/ivNEAT"
            android:layout_marginTop="117dp"
            android:max="7"
            android:progress="0" />

        <ImageView
            android:id="@+id/ivNEAT"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@+id/tvAreoTEA"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@+id/heightTextView"
            android:layout_toRightOf="@+id/heightTextView"
            app:srcCompat="@drawable/mezomorph" />

        <SeekBar
            android:id="@+id/sbGymTime"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewGymTime"
            android:layout_marginTop="10dp"
            android:max="90"
            android:progress="0" />

        <TextView
            android:id="@+id/textViewGymTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/switchCardio"
            android:layout_alignStart="@+id/switchCardio"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="5dp"
            android:text="10" />

        <SeekBar
            android:id="@+id/sbAreoTime"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvAreoTime"
            android:layout_marginTop="10dp"
            android:max="120"
            android:progress="0" />

        <TextView
            android:id="@+id/tvAreoTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewGymTime"
            android:layout_alignStart="@+id/textViewGymTime"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="5dp"
            android:text="10" />

        <Switch
            android:id="@+id/switchCardio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignLeft="@+id/switchGym"
            android:layout_alignStart="@+id/switchGym"
            android:checked="false" />

        <TextView
            android:id="@+id/tvTEAresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btCount"
            android:layout_alignEnd="@+id/sbAreoTime"
            android:layout_alignRight="@+id/sbAreoTime"
            android:text="tvTEAresult" />

        <TextView
            android:id="@+id/tvAREOresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvTEAresult"
            android:layout_alignStart="@+id/tvTEAresult"
            android:layout_alignTop="@+id/btCount"
            android:text="tvAREOresult" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Personal informations:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/textViewWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/weightTextView"
            android:layout_alignBottom="@+id/weightTextView"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/weightTextView"
            android:layout_toRightOf="@+id/weightTextView"
            android:text="0" />

        <TextView
            android:id="@+id/textViewHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/heightTextView"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/heightTextView"
            android:layout_toRightOf="@+id/heightTextView"
            android:text="0" />

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ageTextView"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/ageTextView"
            android:layout_toRightOf="@+id/ageTextView"
            android:text="0" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewWeight"
            android:layout_toEndOf="@+id/textViewWeight"
            android:layout_toRightOf="@+id/textViewWeight"
            android:text="kg" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewHeight"
            android:layout_alignBottom="@+id/textViewHeight"
            android:layout_toEndOf="@+id/textViewHeight"
            android:layout_toRightOf="@+id/textViewHeight"
            android:text="cm" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ageTextView"
            android:layout_marginTop="7dp"
            android:text="Gym training" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="10dp"
            android:text="Cardio training" />

        <Switch
            android:id="@+id/switchGym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/tvGymTEA"
            android:layout_toEndOf="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            app:srcCompat="@drawable/gym1" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewGymTime"
            android:layout_toEndOf="@+id/textViewGymTime"
            android:layout_toRightOf="@+id/textViewGymTime"
            android:text="minutes" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switchCardio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="Added gym to your daily training"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGymTEA"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="Added cardio to your daily training"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvAreoTime"
            android:layout_alignBottom="@+id/tvAreoTime"
            android:layout_toEndOf="@+id/tvAreoTime"
            android:layout_toRightOf="@+id/tvAreoTime"
            android:text="minutes" />

    </RelativeLayout>

</ScrollView>
