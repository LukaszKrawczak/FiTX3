            android:text="Mesomorph"
            android:textSize="8sp"
            app:layout_constraintEnd_toStartOf="@+id/textView95"
            app:layout_constraintStart_toEndOf="@+id/textView94"
            app:layout_constraintTop_toBottomOf="@+id/seekBarUserSomatotype" />

